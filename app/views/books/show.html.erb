books show(/books/book_id)
<body>
 <main>
  <div class="container">
   <div class="row">
   
    <div class="col-md-3">
 
 <!--新規投稿成功、投稿更新成功フラッシュメッセージ-->
     <div>
      <%= flash[:notice] %>
     </div>
    
    <!--左側ページ-->
    <!--テンプレートファイルを呼び出す-->
     <%= render 'list', user:@user %>
    </div>
    
    <!--左ページと右ページの隙間-->
    <!--<div class="offset-md-1"></div>-->
 
    <div class="col-md-8 offset-md-1">
 <!--右側ページ-->
 
     <h1>Book detail</h1>
     <table class="table">
      <tbody>
       <tr>
        <td>
         <%= image_tag @user.get_profile_image(100,100) %>
        </td>
        <td>
         <p><%= link_to @user.name, user_path(@user.id) %></p>
        </td>
        <td>
         <%= @book.title %>
        </td>
        <td>
         <%= @book.body %>
        </td>
        <td>
         <span>
          <% if @book.user == current_user %>
          <%= link_to "Edit",edit_book_path(@book) %>
          <% end %>
         </span>
        </td>
        <td>
         <span>
          <% if @book.user == current_user %>
           <%= link_to "Destroy",book_path(@book), method: :delete, "data-confirm"=>"本当に消しますか？" %>
          <% end %>
         </span>
        </td>
       </tr>
      </tbody>
     </table>
    </div>
   </div>
  </div>
 </main>
  <!--フッターはapplication.html.erbに-->
</body>
 